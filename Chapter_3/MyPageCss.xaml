             x:Class="Chapter_3.MyPageCss"
             xmlns:local="clr-namespace:Chapter_3"
             Title="MyPageCss">
    <ContentPage.Resources>
        <x:StyleSheetExtension Source="myCss.css"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label 
            Text="Css in MAUI"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="CSS Submit Button" StyleClass="SubmitBtn"></Button>
    </VerticalStackLayout>
</ContentPage>